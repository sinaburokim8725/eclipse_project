public class Client extends JFrame implements ActionListener{

	private JPanel contentPane;
	private JTextField textField;
	//대화영역
	JTextArea araTalkPart;
	//전송
	JButton btnDataSend;
	
	//쪽 지 보 내 기
	JButton btnMemoSend;
	//채  팅  방  목  록 JList : lst
